<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:paddingStart="56dp"
    android:paddingEnd="56dp"
    android:layout_height="70dp">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/share_action_wechat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_icon_wechat" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/share_action_friend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_icon_friend" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/share_action_qq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_icon_qq" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/share_action_download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_icon_download" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/share_action_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_icon_close" />
</LinearLayout>